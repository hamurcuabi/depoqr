<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zyonetim">

    <LinearLayout
        android:id="@+id/activity_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/compactcalendar_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:compactCalendarBackgroundColor="@color/zyonetim"
                app:compactCalendarCurrentDayBackgroundColor="@color/colorPrimary"
                app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorBack"
                app:compactCalendarMultiEventIndicatorColor="@color/colorPrimaryDark"
                app:compactCalendarTargetHeight="250dp"
                app:compactCalendarTextColor="#fff"
                app:compactCalendarTextSize="12sp"
                />
        </FrameLayout>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/navList"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@color/appbackcolor"
        android:divider="@color/zyonetim"
        android:dividerHeight="1dp"
        android:childDivider="@color/defaultblue"
        android:transcriptMode="alwaysScroll"
        android:groupIndicator="@drawable/group_indicator"
        ></ExpandableListView>





</android.support.v4.widget.DrawerLayout>