<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appbackcolor"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1c55ca"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gelenad2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1c55ca"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/zyonetim"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/gelendepo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1c55ca"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/zyonetim"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1c55ca"
                android:paddingEnd="5dp"
                android:paddingRight="5dp">

            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btn_barcodoku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/deneme"
            android:drawableEnd="@drawable/action_search"
            android:drawableRight="@drawable/action_search"
            android:padding="10dp"
            android:text="Brkod Okut"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/appbackcolor">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appbackcolor"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/deneme3"
                    android:hint="Sip. MÄ±ktari"
                    android:imeOptions="actionDone"
                    android:inputType="number|phone"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Kalan:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/error"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/finalz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/lightgray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ontbtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightgray"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ontbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btn_satis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/deneme"
                    android:drawableEnd="@drawable/ic_action_arrow"
                    android:drawableRight="@drawable/ic_action_arrow"
                    android:padding="10dp"
                    android:text="Onay"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>