<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackcolor"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#E0F7FA"
        android:orientation="vertical"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/zyonetim"
            android:orientation="vertical"
            android:layout_above="@+id/lnrbtnabove">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <EditText
                android:id="@+id/edtAnaBarkod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:enabled="false"
                android:focusable="false"
                android:hint="TOPLAM ÜRÜN SAYISI: "
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtKodinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:enabled="false"
                android:focusable="false"
                android:hint="0"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="2dp">
            <Button
                android:id="@+id/btnbarcoderead"
                style="@style/mybuttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/deneme"
                android:padding="7dp"
                android:text="QR OKUT"
                android:textSize="20sp"
                android:drawableRight="@drawable/action_search"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/btnbarcodeenter"
                style="@style/mybuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/deneme3"
                android:padding="7dp"
                android:text="BARKOD GİR"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/edtCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="ÜRÜN KODUNU GİRİNİZ."
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColor="#000000"
                android:textColorHint="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold|italic" />



        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/loading"
            >

        </include>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrbtnabove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btndevam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/deneme"
            android:drawableRight="@drawable/ic_action_arrow"
            android:padding="10dp"
            android:text="Devam"
            android:textSize="14sp"
            android:textStyle="bold"
            />


    </LinearLayout>


</RelativeLayout>