<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/lnr1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/zyonetim"

                />

            <TextView
                android:id="@+id/uniqcodeD"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="TextView"
                android:textColor="#000000"
                android:layout_weight="1"
                android:visibility="gone"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/barcodeid"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="TextView"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_weight="2">

            <TextView
                android:id="@+id/proname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />
                <TextView
                    android:id="@+id/uniqcodeeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/error" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:id="@+id/lnr2"
            android:weightSum="8">


            <EditText
                android:id="@+id/edtfirstamount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:focusable="false"
                android:hint="1.birim"
                android:inputType="numberDecimal"
                android:text="0.0"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:imeOptions="actionDone"
                android:selectAllOnFocus="true"/>
            <TextView
                android:id="@+id/txtfirst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="1.cil Birim:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold|italic"/>


            <EditText

                android:id="@+id/edtsecondtamount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:focusable="false"
                android:hint="1.birim"
                android:inputType="numberDecimal"
                android:text="0.0"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:imeOptions="actionDone"
                android:selectAllOnFocus="true"/>
            <TextView
                android:id="@+id/txtsecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2.cil Birim:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold|italic"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/firstunitamount"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/firstunit"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/seconunitamount"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/seconunit"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:id="@+id/lnr3"
            android:weightSum="2"
            android:layout_gravity="center"

           >

            <TextView

                android:id="@+id/txtuyari1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Uyarı Yazısı...."
                android:textAlignment="center"
                android:textColor="#0000ff" />
            <TextView
                android:id="@+id/txtuyari2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Uyarı Yazısı...."
                android:textAlignment="center"
                android:textColor="#0000ff" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>